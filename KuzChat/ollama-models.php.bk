<?php
header('Content-Type: application/json');

$ollama_bin = '/usr/local/bin/ollama'; // adapte au besoin

$command = escapeshellcmd("$ollama_bin ls 2>&1");
exec($command, $output, $status);

if ($status !== 0) {
    echo json_encode(['error' => 'Command failed', 'output' => $output]);
    exit;
}

echo json_encode(['models' => $output]);
