* {
    box-sizing: border-box;
}

body {
    font-family: Arial, sans-serif;
    background-image: url('KuzChat2.jpg');
    background-size: cover;
    background-position: top left;
    background-repeat: no-repeat;
    margin: 0;
    padding: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    width: 100vw;
    overflow: hidden;
}

.main-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.sidebar-container {
    display: flex;
    flex-direction: row;
}

.sidebar {
    width: 500px;
    height: 85vh;
    background-color: rgba(255, 255, 0, 0.3);
    border: 5px solid black;
    border-radius: 5px;
    margin-right: 20px;
    padding: 10px;
    display: flex;
    flex-direction: column;
}

.sidebar h3 {
    background-color: orange;
    color: black;
    font-size: 16px;
    margin: 0;
    padding: 1px;
    text-align: center;
    border: 2px solid black;
    border-radius: 5px;
}

.welcome-message {
    background-color: rgba(255, 165, 0, 0.7); /* Orange de base */
    color: black; 
    font-weight: bold;
    padding: 10px 20px;
    border-radius: 5px;
    text-align: center;
    border: 2px solid black;
    margin: 10px 0;
    animation: slowBlink 4s infinite ease-in-out;
    -webkit-animation: slowBlink 10s infinite ease-in-out; /* Support Webkit */
}

@keyframes slowBlink {
    0% {
        background-color: rgba(255, 165, 0, 0.7); /* Orange */
    }
    50% {
        background-color: rgba(255, 255, 0, 0.7); /* Jaune */
    }
    100% {
        background-color: rgba(255, 165, 0, 0.7); /* Retour orange */
    }
}

@-webkit-keyframes slowBlink {
    0% {
        background-color: rgba(255, 165, 0, 0.7);
    }
    50% {
        background-color: rgba(255, 255, 0, 0.7);
    }
    100% {
        background-color: rgba(255, 165, 0, 0.7);
    }
}

.model-info {
    margin-top: 10px;
    padding: 10px;
    display: flex;
    flex-direction: column;
    gap: 10px; /* espace entre les paragraphes */
}

.model-info p {
    background-color: orange;
    border: 2px solid black;
    border-radius: 5px;
    padding: 10px;
    margin: 0;
    color: black;
    font-weight: bold;
    font-family: Arial, sans-serif;
    font-size: 14px;
}

.chat-container {
    width: 1000px;
    background-color: rgba(255, 255, 0, 0.2);
    border: 5px solid black;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    display: flex;
    flex-direction: column;
    height: 80vh;
}

/* Réinitialise les marges/paddings par défaut */
.chat-header {
    background-color: rgba(66, 142, 233, 0.5) !important; /* Force l'application */
    color: black !important;
    font-size: 18px !important;
    margin: 0 !important;
    padding: 2px 10px !important;
    text-align: center !important;
    line-height: 1.2 !important;
    border: 2px solid black !important;
    border-top-left-radius: 2px !important;
    border-top-right-radius: 2px !important;
    display: block !important;
    width: auto !important;
    box-sizing: content-box !important; /* Alternative à border-box */
    height: auto !important;
    min-height: unset !important; /* Désactive toute hauteur minimale imposée */
}

.chat-messages {
    flex: 1;
    padding: 10px;
    overflow-y: auto;
    margin-bottom: 15px;
    max-height: calc(80vh - 70px);
}

.message {
    margin: 10px 0;
    padding: 8px 12px;
    border-radius: 5px;
    max-width: 80%;
}

.user-message {
    background-color: yellow;
    color: black;
    align-self: flex-end;
    margin-left: auto;
    border: 2px solid black;
    font-weight: bold;
}

.bot-message {
    background-color: orange;
    color: black;
    align-self: flex-start;
    border: 2px solid black;
    font-weight: bold;
}

.chat-input {
    display: flex;
    padding: 10px;
    border: 2px solid black;
    border-bottom-left-radius: 5px;
    border-bottom-right-radius: 5px;
    border-top: 2px solid black;
}

.chat-input input {
    flex: 1;
    background-color: white;
    padding: 8px;
    border: 2px solid black;
    border-radius: 5px;
    margin-right: 10px;
}

.chat-input button {
    padding: 8px 15px;
    background-color: orange;
    color: black;
    border: 2px solid black;
    border-radius: 5px;
    cursor: pointer;
    margin-right: 10px;
    font-weight: bold;
    font-family: Arial, sans-serif;
    font-size: 14px;
}

.chat-input button:hover {
    background-color: yellow;
}

.footer {
    margin-top: 40px;
    text-align: center;
    font-size: 14px;
    font-weight: bold;
    color: black;
    border: 2px solid black;
    padding: 5px;
    border-radius: 5px;
    background-color: rgba(127, 255, 0, 0.5);
}

.footer a {
    color: black;
    text-decoration: none;
    font-weight: bold;
}

.footer a:hover {
    color: yellow;
    text-decoration: none;
    font-weight: bold;
}

/* Styles communs aux sections */
.gpu-section, .cpu-section {
    margin-top: 15px;
    padding: 0;
    border: 2px solid black;
    border-radius: 5px;
    color: black;
    font-weight: bold;
    background: rgba(255, 255, 0, 0.1);
}

/* Style des titres */
.gpu-section h4, .cpu-section h4 {
    margin: 0;
    padding: 8px;
    color: black;
    font-weight: bold;
    background: rgba(0, 150, 255, 0.4);
    border-bottom: 1px solid black;
    border-radius: 3px 3px 0 0;
}

/* Styles communs aux blocs internes */
.gpu-block, .cpu-block {
    padding: 6px;
    margin: 3px;
    border-radius: 3px;
    font-size: 0.9em;
    line-height: 1.4em;
    color: black;
    font-weight: bold;
    border: 1px solid rgba(0, 0, 0, 0.2);
    background: rgba(255, 255, 255, 0.5);
}

/* Couleurs distinctes pour les blocs */
.gpu-block {
    background-color: rgba(255, 165, 0, 0.3);
}

.cpu-block {
    background-color: rgba(255, 215, 128, 0.3);
}

/* Style pour la liste des modèles */
.ollama-model-list {
    list-style-type: none;
    padding: 0;
    margin: 5px 0;
    border: 2px solid black;
    border-radius: 5px;
    background: rgba(255, 255, 0, 0.1);
}

.ollama-model-list li {
    padding: 6px;
    margin: 3px;
    border-radius: 3px;
    font-size: 0.9em;
    line-height: 1.4em;
    color: black;
    font-weight: bold;
    background: rgba(255, 215, 128, 0.4);
    display: flex;
    align-items: center;
    justify-content: space-between;
    border: 1px solid rgba(0, 0, 0, 0.2);
}

.ollama-model-list li span {
    flex-grow: 1;
}

.ollama-model-list button {
    margin-left: 5px;
    padding: 2px 5px;
    cursor: pointer;
    font-weight: bold;
    border: none;
    border-radius: 3px;
}

.model-status {
    margin-left: 5px;
    font-weight: bold;
}
