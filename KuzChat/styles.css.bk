* {
    box-sizing: border-box;
}

body {
    font-family: Arial, sans-serif;
    background-image: url('KuzChat2.jpg');
    background-size: cover;
    background-position: top left;
    background-repeat: no-repeat;
    margin: 0;
    padding: 0;
    display: flex;
    justify-content: center;
    align-items: flex-start; /* Changé pour permettre le défilement */
    min-height: 100vh; /* Assure que le body peut s'étendre */
    width: 100vw;
    overflow: auto; /* Permet le défilement */
}

.top-container {
    position: fixed;
    top: 50px; /* Décalé de 50px du haut */
    left: 50%; /* Centre horizontalement */
    transform: translateX(-50%); /* Ajuste pour centrer parfaitement */
    display: inline-block; /* S'adapte à la largeur du contenu */
    background-color: rgba(39, 115, 245, 0.9);
    border: 2px solid black;
    border-radius: 5px;
    padding: 5px 15px; /* Réduit le padding pour mieux coller au texte */
    text-align: center; /* Centre le texte horizontalement */
    z-index: 1000; /* Au-dessus des autres éléments */
}

.top-container h1 {
    font-size: 36px;
    color: black;
    font-weight: bold;
    margin: 0;
    padding: 0;
    white-space: nowrap; /* Empêche le texte de se casser */
    line-height: 1; /* Ajuste la hauteur de ligne pour un centrage vertical approximatif */
    display: inline; /* Assure que le h1 suit le inline-block */
}

.main-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 120px; /* Augmenté pour un espace clair sous le bandeau */
    width: 100%; /* Assure que le wrapper s'étend sur toute la largeur */
}

.sidebar-container {
    display: flex;
    flex-direction: row;
    width: 100%; /* Permet une mise en page flexible */
    max-width: 1500px; /* Limite la largeur maximale pour éviter une dispersion excessive */
}

.sidebar {
    width: 500px;
    min-height: 0; /* Supprime la hauteur fixe pour permettre le défilement */
    background-color: rgba(255, 255, 0, 0.2);
    border: 5px solid black;
    border-radius: 5px;
    margin-right: 20px;
    padding: 10px;
    display: flex;
    flex-direction: column;
}

.sidebar h3 {
    background-color: rgba(66, 142, 233, 0.9) !important;
    color: black;
    font-size: 16px;
    margin: 0;
    padding: 1px;
    text-align: center;
    border: 2px solid black;
    border-radius: 5px;
}

@keyframes slowBlink {
    0% {
        background-color: rgba(255, 165, 0, 0.7);
    }
    50% {
        background-color: rgba(255, 255, 0, 0.7);
    }
    100% {
        background-color: rgba(255, 165, 0, 0.7);
    }
}

@-webkit-keyframes slowBlink {
    0% {
        background-color: rgba(255, 165, 0, 0.7);
    }
    50% {
        background-color: rgba(255, 255, 0, 0.7);
    }
    100% {
        background-color: rgba(255, 165, 0, 0.7);
    }
}

.model-info {
    margin-top: 10px;
    padding: 10px;
    display: flex;
    flex-direction: column;
    gap: 10px;
}

.model-info p {
    background-color: rgba(66, 142, 233, 0.5);
    border: 2px solid black;
    border-radius: 5px;
    padding: 10px;
    margin: 0;
    color: black;
    font-weight: bold;
    font-family: Arial, sans-serif;
    font-size: 14px;
}

.chat-container {
    flex: 1; /* Permet au chat-container de s'étendre avec le contenu */
    background-color: rgba(39, 132, 245, 0.2) !important;
    border: 5px solid black;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    display: flex;
    flex-direction: column;
    min-height: 0; /* Supprime la hauteur fixe pour permettre le défilement */
}

.chat-header {
    background-color: rgba(39, 132, 245, 0.5) !important;
    color: black !important;
    font-size: 18px !important;
    margin: 0 !important;
    padding: 2px 10px !important;
    text-align: center !important;
    line-height: 1.2 !important;
    border: 2px solid black !important;
    border-top-left-radius: 2px !important;
    border-top-right-radius: 2px !important;
    display: block !important;
    width: auto !important;
    box-sizing: content-box !important;
    height: auto !important;
    min-height: unset !important;
}

.chat-messages {
    flex: 1;
    padding: 10px;
    overflow-y: auto; /* Permet le défilement dans le chat si nécessaire */
    margin-bottom: 15px;
}

.message {
    margin: 10px 0;
    padding: 8px 12px;
    border-radius: 5px;
    max-width: 80%;
}

.user-message {
    background-color: rgb(119, 95, 153, 0.7);
    color: black;
    align-self: flex-end;
    margin-left: auto;
    border: 2px solid black;
    font-weight: bold;
}

.bot-message {
    background-color: rgb(18, 22, 140, 0.7);
    color: white;
    align-self: flex-start;
    border: 2px solid black;
    font-weight: bold;
}

.chat-input {
    display: flex;
    padding: 10px;
    border: 2px solid black;
    border-bottom-left-radius: 5px;
    border-bottom-right-radius: 5px;
    border-top: 2px solid black;
}

.chat-input input {
    flex: 1;
    background-color: white;
    padding: 8px;
    border: 2px solid black;
    border-radius: 5px;
    margin-right: 10px;
}

.chat-input button {
    padding: 8px 15px;
    background-color: rgba(66, 142, 233, 0.5) !important;
    color: black;
    border: 2px solid black;
    border-radius: 5px;
    cursor: pointer;
    margin-right: 10px;
    font-weight: bold;
    font-family: Arial, sans-serif;
    font-size: 14px;
}

.chat-input button:hover {
    background-color: rgba(66, 142, 233, 0.8) !important;
}

.footer {
    margin-top: 40px;
    text-align: center;
    font-size: 14px;
    font-weight: bold;
    color: black;
    border: 2px solid black;
    padding: 5px;
    border-radius: 5px;
    background-color: rgba(255, 255, 255, 0.5);
}

.footer a {
    color: black;
    text-decoration: none;
    font-weight: bold;
}

.footer a:hover {
    color: rgb(67, 80, 138);
    text-decoration: none;
    font-weight: bold;
}

.gpu-section, .cpu-section {
    margin-top: 15px;
    padding: 0;
    border: 2px solid black;
    border-radius: 5px;
    color: black;
    font-weight: bold;
    background: rgba(255, 255, 0, 0.1);
}

.gpu-section h4, .cpu-section h4 {
    margin: 0;
    padding: 8px;
    color: black;
    font-weight: bold;
    background: rgba(0, 150, 255, 0.9);
    border-bottom: 1px solid black;
    border-radius: 3px 3px 0 0;
}

.gpu-block, .cpu-block {
    padding: 6px;
    margin: 3px;
    border-radius: 3px;
    font-size: 0.9em;
    line-height: 1.4em;
    color: black;
    font-weight: bold;
    border: 1px solid rgba(0, 0, 0, 0.2);
    background: rgba(255, 255, 255, 0.8);
}

.gpu-block {
    background-color: rgba(66, 142, 233, 0.5) !important;
}

.cpu-block {
    background-color: rgba(66, 142, 233, 0.5) !important;
}

.ollama-model-list {
    list-style-type: none;
    padding: 0;
    margin: 5px 0;
    border: 2px solid black;
    border-radius: 5px;
    background: rgba(255, 255, 0, 0.1);
}

.ollama-model-list li {
    padding: 6px;
    margin: 3px;
    border-radius: 3px;
    font-size: 0.9em;
    line-height: 1.4em;
    color: black;
    font-weight: bold;
    background: rgba(0, 255, 255, 0.4);
    display: flex;
    align-items: center;
    justify-content: space-between;
    border: 1px solid rgba(0, 0, 0, 0.2);
}

.ollama-model-list li span {
    flex-grow: 1;
}

.ollama-model-list button {
    margin-left: 5px;
    padding: 2px 5px;
    cursor: pointer;
    font-weight: bold;
    border: none;
    border-radius: 3px;
}

.model-status {
    margin-left: 5px;
    font-weight: bold;
}
